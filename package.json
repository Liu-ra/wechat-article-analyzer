{
  "name": "wechat-article-analyzer",
  "version": "2.0.0",
  "description": "微信公众号文章分析工具",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "exceljs": "^4.4.0",
    "http-proxy-middleware": "^3.0.5",
    "node-forge": "^1.3.3",
    "node-mitmproxy": "^3.1.1",
    "pdfmake": "^0.2.10",
    "puppeteer": "^21.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "segment": "^0.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pdfmake": "^0.2.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.wechat.article.analyzer",
    "productName": "微信公众号文章分析工具",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/puppeteer/.local-chromium",
        "to": "puppeteer/.local-chromium"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/puppeteer/**/*",
      "node_modules/pdfmake/**/*",
      "node_modules/segment/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
